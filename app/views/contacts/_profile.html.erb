<script>
	$(document).on("click", ".edit_link", function(){
		var divID = $(this).attr("div_id");
		
		$(".currnt_display_div").addClass("non_display_div");
		
		$(".currnt_display_div").removeClass("currnt_display_div");
		
		$("#" + divID).addClass("currnt_display_div");
		
		$("#" + divID).removeClass("non_display_div");
		
		$(".current_link").removeClass("current_link");
		$(this).addClass("current_link");
		return false;
	});
</script>






