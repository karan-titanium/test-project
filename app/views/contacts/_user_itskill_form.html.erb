it skill
<%= form_for(user.user_itskills.build, :validate => true, :url => {:action => "update_contact_profile", :current_div => "itskills_div"}, :remote => true, :html => {:'data-replace' => "contact_profile_section_div"}) do |f| %>
<div class="row">
	<div class="span2 txt_highlight">
		Skills:
	</div>
	<div class="span4">
		<%= f.autocomplete_field :it_skill_name, autocomplete_itskill_name_user_profiles_path, :class => "autocomplete_field", :min_limit => 1, :max_limit => 50, :min_msg => Settings.e_field_mandatory  , :max_msg => Settings.e_fieldlength_50, :placeholder => Settings.h_candidate_itskill, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title =>"" %>
	</div>
</div>
<div class="row">
	<div class="span2 txt_highlight">
		Experience:
	</div>
	<div class="span2">
		<%= f.text_field :experience, :class => "small", :placeholder => Settings.h_candidate_itskillexperiene, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title =>"" %>
	</div>
	<div class="span2">
		<select name="it_experience_type" class="small mergin-left">
			<option value="month">Month</option><option value="year">Year</option>
		</select>
	</div>
</div>
<div class="row">
	<div class="span2 txt_highlight">
		Skill Level:
	</div>
	<div class="span4">
		<div class="row">
			<%= f.radio_button :level, "basic", :id => "r3", :checked => true %>
			<label for="r3"><span></span>Basic</label>
		</div>
		<div class="row">
			<%= f.radio_button :level, "intermediate", :id => "r4" %>
			<label for="r4"><span></span>Intermediate</label>
		</div>
		<div class="row">
			<%= f.radio_button :level, "advanced", :id => "r5" %>
			<label for="r5"><span></span>Advanced</label>
		</div>
	</div>
</div>
<div class="clearfix margin-20"></div>
<div class="row">
	<div class="span3">
		<%= f.submit "Add and Finished", :class => "button_primery_modal add_itskill", :onClick => 'return check_autocomplete()' %>
	</div>
	<div class="span3">
		<%= f.submit "Add and Enter Another", :class => "button_primery_modal add_itskill", :onClick => 'return check_autocomplete()' %>
	</div>
</div>
<% end %>
