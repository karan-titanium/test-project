<!-- start Company Profile page -->
    <div class="row bg_white well">
        <div class="row" style="font-size:18px;" >
            <div class="span3">
                <%= @contact.first_name %>
            </div>
            <div class="span3">
                <%= form_tag({:controller => 'contacts', :action => "render_contact_profile_section", :contact_id => @contact.id}, {:remote => true, :'data-replace' => 'contact_profile_section_div'})  do %>
                    <%= select_tag :profile_section, options_for_select(CONTACT_PROFILE_SECTIONS), :onchange => "$(this).closest('form').submit();" %>
                <% end %>
            </div>
        </div>
    </div>
        
    <div id="contact_profile_section_div">
        <!-- Here contents are loaded dynamically -->
        <%= render :partial => "overview", :locals => {:contact => @contact} %>
    </div>
<!-- End Company Profile page --> 

