<%= form_for(question_category, :validate => true, :url => {:action => "update_question_category", :controller => "database_managements", :id => question_category.id},:class => 'ays-ignore', :remote => true, :html => { :'data-replace' => "database_management_div"}) do |f| %>
	

	<div class="row">
		<div class="span2">
			Question Type :
		</div>
		<div class="span4">
			<a href="#" data-toggle="tooltip" data-placement="left" title="Your alert message will go here">
			<%= f.text_field :name %>
			</a>
		</div>
	</div>
	
	<div class="row">
		<div class="span2">
			Status :
		</div>
		<div class="span4">
			<a href="#" data-toggle="tooltip" data-placement="left" title="Your alert message will go here">
		
			<%= f.select :status, options_for_select(QUESTION_CATEGORY_STATUS_LIST.invert, {:selected => question_category.status}) %>
			</a>
		</div>
	</div>

	<div class="row">
		<div class="span2">
			Trait :
		</div>
		<div class="span4">
			<a href="#" data-toggle="tooltip" data-placement="left" title="Your alert message will go here">
			<%= f.select :trait_id, options_from_collection_for_select(@traits_lists, "id", "name", {:selected => question_category.trait_id} ) %>
			</a>
		</div>
	</div>

	<div class="clearfix margin-20"></div>
	<div class="row">
		<div class="span3 position_center">
			<%= f.submit "Save", :class => "button_primery button_finish position_center" %>
		</div>
	</div>

<% end %>
