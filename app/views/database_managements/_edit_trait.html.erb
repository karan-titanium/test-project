<%= form_for(trait, :validate => true, :url => {:action => "update_trait", :controller => "database_managements", :id => trait.id}, :class => 'ays-ignore', :remote => true, :html => { :'data-replace' => "database_management_div"}) do |f| %>

<div class="row">
	<div class="span2">
		Name :
	</div>
	<div class="span4">
		<a href="#" data-toggle="tooltip" data-placement="left" title="Your alert message will go here">
		<%= f.text_field :name %>
		</a>
	</div>
</div>

<div class="row">
	<div class="span2">
		Status :
	</div>
	<div class="span4">
		<a href="#" data-toggle="tooltip" data-placement="left" title="Your alert message will go here">
		<!-- <input name="skillstype" type="text" value="Name"> -->
		<!-- < %binding.pry%> -->
		<%= f.select :status, options_for_select(TRAIT_STATUS_LIST.invert, {:selected => trait.status}) %>
		</a>
	</div>
</div>

<div class="row">
	<div class="span2">
		Description :
	</div>
	<div class="span4">
		<a href="#" data-toggle="tooltip" data-placement="left" title="Your alert message will go here"> 
		<%= f.text_field :description %>
		</a>
	</div>
</div>

<div class="clearfix margin-20"></div>
<div class="row">
	<div class="span3 position_center">
		<%= f.submit "Save", :class => "button_primery button_finish position_center" %>
	</div>
</div>
<% end %>