

<!-- Header -->
<%= render :partial => "layouts/header", :locals => {:title => "Candidate Signup" } %>
<!-- End Header --> 

<!--Start Login-->
<div id="signup" class="page">
  <div class="container">
    <% if @position_ref != nil %>
    <div class="row">
      <div class="span10 position_center">
        <div class="User_Referance"> Position Reference : ABCD1234 </div>
        <div class="clearfix"></div>
      </div>
    </div>
    <% end %>
    <div class="row bg_white">
      <div class="span10 position_center">
        <div class="title-page">
          <h2 class="title"><%= Settings.c_Signup_Welcome %></h2>
          <h3 class="title-description"></h3>
        </div>
        <P align="center""></P>
      </div>
    </div>
    <div class="row bg_white">
      <div class="span10 position_center">
        <div class="span1"></div>
        <div class="span2" style="text-align: right;">
          <h2 class="title">Register</h2>
        </div>
        <!--end span2-->
        <div class="span6">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<!--           < %= devise_error_messages! %> -->
            <div class="row"> 

              <%= f.text_field :first_name, :placeholder => Settings.h_candidate_fname, :autofocus => true, :tabindex => 1, :autofocus => true, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title => Settings.t_signup_fname, :style => "width: 322px;" %>

			 </div>
            <div class="row">
			
			<!--<a href="#" data-toggle="tooltip" data-placement="right" title="<%= Settings.t_signup_lname %>">-->
              <%= f.text_field :last_name, :placeholder => Settings.h_candidate_lname, :tabindex => 2, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title => Settings.t_signup_lname, :style => "width: 322px;" %>
              <!--</a> -->
			  
			  </div>
            <div class="row"> 
			
			<!--<a href="#" data-toggle="tooltip" data-placement="right" title="<%= Settings.t_emailid %>">-->
              <%= f.email_field :email, :placeholder => Settings.h_candidate_emailaddress, :tabindex => 3, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title => Settings.t_emailid, :style => "width: 322px;" %>
             <!-- </a> -->
			  
			  </div>
			  
            <div class="row"> 
			
			<!--<a href="#" data-toggle="tooltip" data-placement="right" title="<%= Settings.t_password %>">-->
              <%= f.password_field :password, :placeholder => Settings.h_user_password, :tabindex => 4, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title => Settings.t_password, :style => "width: 322px;" %>
             <!-- </a> -->
			  
			  </div>
			  
            <div class="row"> 
			
			<!--<a href="#" data-toggle="tooltip" data-placement="right" title="<%= Settings.t_signup_confirmpassword %>">-->
              <%= f.password_field :password_confirmation, :placeholder => Settings.h_user_confirmpassword, :tabindex => 5, :'data-toggle' => "tooltip", :'data-placement' => "right" , :title => Settings.t_signup_confirmpassword, :style => "width: 322px;" %>
              <%= f.hidden_field :user_type, :value => USER_TYPE_CONTACT %>
              <%= f.hidden_field :status, :value => USER_STATUS_PENDING %>
              <!--</a> -->
			  
			  </div>
            <div class="row btn-register-wraper"><%= f.submit "Register", :class =>'btn_register' %> </div>
          <% end %>
        </div>
        <!--end span6--> 
      </div>
    </div>
    <div class="row bg_white">
      <div class="span10 position_center">
        <div class="span1"></div>
        <div class="span2"  style="text-align: right;">
          <h2 class="title">Or</h2>
        </div>
        <!--end span2-->
        <div class="span6">
          <div class="row">
            <%= link_to "Connect with LinkedIn", user_omniauth_authorize_path(:linkedin), :class => 'signin_linkedin' %>
            <%= link_to "Connect with Google", user_omniauth_authorize_path(:google_oauth2), :class => 'signin_google' %> 
<!--        < %= link_to "Facebook #{}", "auth/facebook" %> -->
          </div>
        </div>
        <!--end span6--> 
      </div>
    </div>
  </div>
</div>
<!--End Login--> 

 
<!-- < %= render :partial => "layouts/warning_popup" , :locals => {:flash => devise_error_messages! } %> -->
<script>
    $(document).ready(function(){
        if ("<%= devise_error_messages!.present? ? "true" : "false" %>" == "true"){
        $("#warning").click();
        }
        
      });
    
</script>
<div style="display: none">
<a href="#warningbox" id="warning" data-toggle="modal" title="Link to Settings page" class="button_primery_big" data-placement="top" id="">Warning Box</a>
</div>

<div id="warningbox" class="modal hide fade" data-width="960">
  <div class="modal-body">
    <div class="row">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <div class="alert alert-error warningbox" style="margin-top:25px;"> 
            <h4>Warning box</h4>
            <div class="clearfix margin-15"></div>
            <p id = "warning_msg">
                <%= if resource.errors[:first_name].first 
                        resource.errors[:first_name].first
                    elsif resource.errors[:last_name].first
                        resource.errors[:last_name].first
                    elsif resource.errors[:email].first
                        resource.errors[:email].first
                    else
                        resource.errors.full_messages.first
                    end
                %>
            </p> 
            </div>
        </div>
  </div>
  <!-- end model body --> 
</div>

