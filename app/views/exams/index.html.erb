<script>
        $(window).load(function() {
    		$('#examContent').html('<%= escape_javascript(render 'exams/list') %>');
        });
</script>


<div id="examContent">

</div>
<div id="add_exam" class="modal modal-big hide fade" data-width="760">
	<%= form_for(@exam, :validate => true, :url => {:action =>'create'}, :remote => true, :html => {:'data-replace' => "examContent"}) do |f| %>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
			&times;
		</button>
		<h3>Exam Builder</h3>
	</div>
	<div class="modal-body">
		<div class="row">
			<div class="span2 txt_highlight">
				Name : 
			</div>
			<div class="span4">
					<%= f.text_field :name, :placeholder => "", :'data-toggle' => "tooltip", :'data-placement' => "right" , :title =>"" %>
				 
			</div>
		</div>	
		
		<div class="row">
			<div class="span2 txt_highlight">
				Description :
			</div>
			<div class="span4">
					<%= f.text_area :description, :placeholder => "", :size => '10x5', :'data-toggle' => "tooltip", :'data-placement' => "right" , :title =>"" %>
				 
			</div>
		</div>		
		
		<div class="row">
			<div class="span2 txt_highlight">
				Intro :
			</div>
			<div class="span4">
					<%= f.text_area :intro, :placeholder => "", :size => '10x5', :'data-toggle' => "tooltip", :'data-placement' => "right" , :title =>"" %>
				 
			</div>
		</div>		
		
		
		<div class="row">
			<div class="span2 txt_highlight">
				Rest Period :
			</div>
			<div class="span4">
					<%= f.number_field :rest, :placeholder => "", :'data-toggle' => "tooltip", :'data-placement' => "right" , :title =>"" %> &nbsp;&nbsp; Minutes
				 
			</div>
		</div>	
		
		<div class="clearfix"></div>
		<div class="row">
				<%= f.submit "Add and Finish", :id => "add_and_finished", :class => "button_primery_modal pull-left add_exam" %>
				<%= f.submit "Add and Enter Another", :id => "add_and_finished", :class => "button_primery_modal pull-right add_exam" %>
				<!-- <a href="#" id= "add_and_finished" class="button_primery_modal add_qualification">Add & Finished</a> -->
		</div>		
    
   </div>
  <% end %>
</div>


