            <h4>Information Box</h4>
            <div class="clearfix margin-15"></div>
            <p>
               <%= flash[:notice] if flash[:notice].present? %> 
            </p> 
            </div>
        </div>
  </div>
  <!-- end model body --> 
</div>
<!-- end model of information box -->

