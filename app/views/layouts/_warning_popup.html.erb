<script>
    $(document).ready(function(){
        if ("<%= flash[:alert].present? ? "true" : "false" %>" == "true"){
        $("#warning").click();
        }
        if ("<%= flash[:notice].present? ? "true" : "false" %>" == "true"){
        $("#information").click();
        }
      });
</script>
<div style="display: none">
<a href="#warningbox" id="warning" data-toggle="modal" title="Link to Settings page" class="button_primery_big" data-placement="top" id="">Warning Box</a>
<a href="#informationbox" id="information" data-toggle="modal" title="Link to Settings page" class="button_primery_big" data-placement="top">Information Box</a>
<a href="#actionbox" id="action" data-toggle="modal" title="Link to Settings page" class="button_primery_big" data-placement="top">Action Box</a>
<a href="#warningbox_clientside" id="warning_cs" data-toggle="modal" title="Link to Settings page" class="button_primery_big" data-placement="top" id="">Warning Box Client side</a>
</div>

<!-- Modal Definitions (warning box) -->
<div id="warningbox" class="modal hide fade" data-width="960">
  <div class="modal-body">
    <div class="row">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <div class="alert alert-error warningbox" style="margin-top:25px;"> 
            <h4>Warning box</h4>
            <div class="clearfix margin-15"></div>
            <p id = "warning_msg">
                <%= flash[:alert].present? ? flash[:alert] : flash[:notice] %> 
            </p> 
            </div>
        </div>
  </div>
  <!-- end model body --> 
</div>
<!-- end model of warning box -->

<!-- Modal Definitions (information box) -->
<div id="informationbox" class="modal hide fade" data-width="960">
  <div class="modal-body">
    <div class="row">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
