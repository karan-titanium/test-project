<div id='questionList'>
    <table border="1px" width="80%">
        <thead style="background-color: #CCCCCC;">
            <tr>
                <th>Name</th>
                <th>Status</th>
                <td>Edit</td>
            </tr>
        </thead>
        <tbody >
            <% @questions.each do |question| %>
            <tr class="<%= cycle("odd", "even") -%>">
                <td> <%= question.name %> </td>
                <td> <%= question.description %> </td>
                <td><%= link_to :Edit,"#" ,:path => URI::escape(edit_question_path(question.id)), :class => "edit_link"  %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <style>
        .even {
            background-color: #CCCCFF;
        }

        .odd {
            background-color: #FFCC99;
        }
    </style>
</div>