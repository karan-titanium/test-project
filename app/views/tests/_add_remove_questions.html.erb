<h2> Selected Questions </h2>
<table border="1px" width="80%">
    <thead style="background-color: #CCCCCC;">
        <tr>
            <th>Name</th>
            <th>Status</th>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody >
        <% @selected_questions.each do |question| %>
        <tr class="<%= cycle("odd", "even") -%>">
            <td> <%= question.name %> </td>
            <td> <%= question.description %> </td>
            <td><%= link_to :remove,"#" ,:path =>"tests/remove_question/#{question.id}", :class => "remove_question", :'data-test_id' => @tfp_test.id  %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<br /><br /><br /><br /><br /><br /><br />


<h2> Available Questions </h2>
<table border="1px" width="80%">
    <thead style="background-color: #CCCCCC;">
        <tr>
            <th>Name</th>
            <th>Status</th>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody >
        <% @available_questions.each do |question| %>
        <tr class="<%= cycle("odd", "even") -%>">
            <td> <%= question.name %> </td>
            <td> <%= question.description %> </td>
            <td><%= link_to :Add,"#" ,:path => "tests/add_question/#{question.id}", :class => "add_question", :'data-test_id' => @tfp_test.id  %></td>
        </tr>
        <% end %>
    </tbody>
</table>