<script>
        $(window).load(function() {
    		$('#testContent').html('<%= escape_javascript(render 'tests/list') %>');
        });
</script>
<div id="testContent">

</div>
<div class="popup_block content" id="add_qualifications">
    <a href="#" class="avgrund-close"></a>

    <table>
        <%= form_for(@tfp_test,:validate => true, :url => {:action =>'create'}) do |f| %>

        <tr>
            <td>Name : </td>
            <td> <%= f.text_field :name %></td>
        </tr>
        <tr>
            <td>Description : </td>
            <td> <%= f.text_field :description %> </td>
        </tr>
         
    <tr>
        <td colspan="1"> Duration </td>
        <td colspan="3"> <%= f.number_field :duration %> </td>
    </tr>
    <tr>
        <td colspan="1"> Status </td>
        <td colspan="3"> <%= f.select :status, QUESTION_STATUS %> </td>
    </tr>
        <tr>
            <td> <%= link_to "Add & Finished", "#" , :id => "add_and_finished", :class => "add_test" %></td>
        </tr>
        <% end %>

    </table>
